<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - UI</title>
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/jquery-editable-select/jquery-editable-select.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel='stylesheet' href="~/css/libs.min.css">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top  navbar-dark bg-primary">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample08" aria-controls="navbarsExample08" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-md-center" id="navbarsExample08">
            <ul class="navbar-nav">

                @if (User.IsInRole("Admin") || User.IsInRole("Accountant"))
                {
                    <li class="nav-item">
                        <a class="navbar-brand" asp-area="" asp-controller="AddEmployee" asp-action="Index">Додати нового співробітника</a>
                    </li>
                }

                <li class="nav-item">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Directory">Довідники</a>
                </li>

                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="Index">Користувачі</a>
                    </li>
                }

                <li class="nav-item">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="SignOut">Вийти</a>
                </li>

                @*<li class="nav-item">
            <a asp-area="" asp-controller="Search" asp-action="Index" class="nav-link">Пошуки</a>
        </li>*@

            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; ППО ОНУ ім. І.І. Мечникова - @DateTime.Now.Year</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/lib/jquery-editable-select/jquery-editable-select.min.js"></script>
        <script src="~/lib/jquery-masked-input/jquery.maskedinput.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>