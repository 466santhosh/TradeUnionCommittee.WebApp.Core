@model IEnumerable<TradeUnionCommittee.BLL.DTO.DirectoryDTO>
@{
    ViewData["Title"] = "Громадські посади";
    Layout = "_Layout";
}

<section class="add-user container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-12 add-user_block">
            <div class="row">
                <a asp-controller="Home" asp-action="Directory" class="back-link">Повернутися</a>
                <hr />
                <div class="form-group">
                    <a asp-action="Create" class="btn btn-success">Додати громадську посаду</a>
                </div>
            </div>
            <div class="row main-block">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Громадські посади
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Name
                                </td>

                                <td class="text-right">
                                    <div class="btn-group">
                                        <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown"></button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" asp-action="Update" asp-route-id="@item.Id">Редагувати назву</a>

                                            @if (User.IsInRole("Admin"))
                                            {
                                                <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                                            }
                                        </div>
                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>