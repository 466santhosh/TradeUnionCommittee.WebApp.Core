@model UpdateRoleAccountViewModel
@{
    ViewData["Title"] = "UpdateRole";
}

<section class="add-user container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-12 add-user_block">
            <div class="row align-items-center mt-3">
                <div class="col-md-10">
                    <h2>Редагування ролі</h2>
                </div>
            </div>
            <hr>
            <form asp-action="UpdateRole">
                <div class="row">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdUser" />

                    <div class="form-group col-lg-4 col-xl-3">
                        <label asp-for="IdRole" class="info-label">Роль доступу</label>
                        <select asp-for="IdRole" asp-items="@ViewBag.Role" class="custom-select"></select>
                        <span asp-validation-for="IdRole" class="text-danger"></span>
                    </div>

                </div>

                <div class="row justify-content-between">
                    <div class="form-group col-lg-3">
                        <div>
                            <a asp-action="Index">Повернутися</a>
                        </div>
                    </div>

                    <div class="col-md-6 text-right">
                        <input type="submit" value="Зберегти" class="btn btn-success btn-default" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>