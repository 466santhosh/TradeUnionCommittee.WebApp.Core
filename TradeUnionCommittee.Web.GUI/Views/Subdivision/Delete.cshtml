@model SubdivisionViewModel
@{
    ViewData["Title"] = "Delete";
}

<div class="row align-items-center">
    <div class="col-md-6">
        <h2>Видалення</h2>

        <h3>Ви впевнені, що хочете видалити підрозділ?</h3>
    </div>
    <div class="col-md-6 text-right">
        <form asp-action="Delete">
            <input type="submit" value="Видалити" class="btn btn-danger" />
        </form>
    </div>
</div>

<div>
    <hr />
    <input type="hidden" asp-for="Id" />
    
    <dl class="row">
        <dt class="col-md-3">
            <h6>Назва підрозділу</h6>
        </dt>
        <dd class="col-md-5">
            <p class="lead" style="font-size: 15px;">@Html.DisplayFor(model => model.Name)</p>
        </dd>
    </dl>

    
    <dl class="row">
        <dt class="col-md-3">
            <h6>Aбревіатура</h6>
        </dt>
        <dd class="col-md-5">
            <p class="lead" style="font-size: 15px;">@Html.DisplayFor(model => model.Abbreviation)</p>
        </dd>
    </dl>

    <div class="form-actions no-color">
        <a asp-action="Index">Повернутися до списку підрозділів</a>
    </div>

</div>