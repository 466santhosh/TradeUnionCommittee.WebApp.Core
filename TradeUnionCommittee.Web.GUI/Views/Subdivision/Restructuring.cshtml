@model RestructuringViewModel
@{
    ViewData["Title"] = "Restructuring";
}

<section class="add-user container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-12 add-user_block">

            <div class="row align-items-center mt-3">
                <div class="col-md-10">
                    <h1>Реструктуризація</h1>
                </div>
            </div>
            <hr>
            <form asp-action="Restructuring">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RowVersion" />
                <div class="row">
                    <div class="form-group col-lg-4 col-xl-6">
                        <select asp-for="HashIdSubordinate" class="form-control" asp-items="ViewBag.SubordinateSubdivision"></select>
                    </div>
                    <div class="form-group col-lg-4 col-xl-6">
                        <select asp-for="HashId" class="form-control" asp-items="ViewBag.MainSubdivision"></select>
                    </div>
                </div>
                <div class="row justify-content-between">
                    <div class="form-group col-lg-3">
                        <div>
                            <a asp-action="Index">Повернутися</a>
                        </div>
                    </div>
                    <div class="col-md-6 text-right">
                        <input type="submit" value="Реструктуризувати" class="btn btn-success btn-default" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>