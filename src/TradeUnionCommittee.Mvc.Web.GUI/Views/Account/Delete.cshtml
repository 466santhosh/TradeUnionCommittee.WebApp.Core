@model TradeUnionCommittee.BLL.DTO.AccountDTO
@{
    ViewData["Title"] = "Delete";
}

<section class="add-user container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-12 add-user_block">

            <div class="row align-items-center mt-3">
                <div class="col-md-10">
                    <h1>Видалення користувача</h1>
                    <h3 class="text-muted">Ви впевнені, що хочете видалити користувача?</h3>
                </div>
            </div>
            <hr>
            @if (TempData["ErrorsList"] == null)
            {
                <form asp-action="Delete">

                    <input type="hidden" asp-for="HashId" />
                    
                    <dl class="row">
                        <dt class="col-md-3">
                            <h6>Прізвище</h6>
                        </dt>
                        <dd class="col-md-5">
                            <p class="lead" style="font-size: 15px;">@Model.FirstName</p>
                        </dd>
                    </dl>

                    <dl class="row">
                        <dt class="col-md-3">
                            <h6>Ім'я</h6>
                        </dt>
                        <dd class="col-md-5">
                            <p class="lead" style="font-size: 15px;">@Model.LastName</p>
                        </dd>
                    </dl>

                    @if (!string.IsNullOrEmpty(Model.Patronymic) && !string.IsNullOrWhiteSpace(Model.Patronymic))
                    {
                        <dl class="row">
                            <dt class="col-md-3">
                                <h6>По батькові</h6>
                            </dt>
                            <dd class="col-md-5">
                                <p class="lead" style="font-size: 15px;">@Model.Patronymic</p>
                            </dd>
                        </dl>
                    }

                    <dl class="row">
                        <dt class="col-md-3">
                            <h6>Email</h6>
                        </dt>
                        <dd class="col-md-5">
                            <p class="lead" style="font-size: 15px;">@Model.Email</p>
                        </dd>
                    </dl>

                    <div class="row justify-content-between">
                        <div class="form-group col-lg-3">
                            <div>
                                <a asp-action="Index">Повернутися</a>
                            </div>
                        </div>
                        <div class="col-md-6 text-right">
                            <input type="submit" value="Видалити" class="btn btn-danger" />
                        </div>
                    </div>

                </form>
            }
            else
            {
                await Html.RenderPartialAsync("_Errors", TempData["ErrorsList"]);
            }
        </div>
    </div>
</section>