
@{
    ViewData["Title"] = "DataBaseError";
}

<h1 class="text-danger">Сталась помилка.</h1>
<h2 class="text-danger">На жаль, під час обробки вашого запиту сталася помилка.</h2>

@if (@ViewBag.ErrorMessage.Count > 1)
{
    <h2 class="text-danger">Дата та текст помилок:</h2>
}
else
{
    <h2 class="text-danger">Дата та текст помилки:</h2>
}

@foreach (var x in @ViewBag.ErrorMessage)
{
    <h3 class="text-danger">@x.Time - @x.Description</h3>
}

<a asp-controller=@ViewBag.BackController asp-action=@ViewBag.BackAction>Поверніться і спробуйте ще раз</a>



