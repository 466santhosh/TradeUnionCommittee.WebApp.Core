@model TradeUnionCommittee.BLL.DTO.MaterialAidEmployeesDTO
@{
    ViewData["Title"] = "Delete";
}

<section class="add-user container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-12 add-user_block">

            <div class="row align-items-center mt-3">
                <div class="col-md-10">
                    <h1>Видалення матеріальної допомоги</h1>
                    <h3 class="text-muted">Ви впевнені, що хочете видалити матеріальну допомогу?</h3>
                </div>
            </div>
            <hr>
            @if (TempData["ErrorsList"] == null)
            {
                <form asp-action="Delete">

                    <input type="hidden" asp-for="HashId" />
                    <input type="hidden" asp-for="HashIdEmployee" />

                    <dl class="row">
                        <dt class="col-md-3">
                            <a>Назва матеріальної допомоги</a>
                        </dt>
                        <dd class="col-md-5">
                            <p class="lead" style="font-size: 15px;">@Model.NameMaterialAid</p>
                        </dd>
                    </dl>

                    <dl class="row">
                        <dt class="col-md-3">
                            <a>Розмір</a>
                        </dt>
                        <dd class="col-md-5">
                            <p class="lead" style="font-size: 15px;">@Model.Amount.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("uk-UA"))</p>
                        </dd>
                    </dl>

                    <dl class="row">
                        <dt class="col-md-3">
                            <a>Дата отримання</a>
                        </dt>
                        <dd class="col-md-5">
                            <p class="lead" style="font-size: 15px;">@Model.DateIssue.ToString("dd.MM.yyyy")</p>
                        </dd>
                    </dl>

                    <div class="row justify-content-between">
                        <div class="form-group col-lg-3">
                            <div>
                                <a asp-action="Index" asp-route-id="@Model.HashIdEmployee">Повернутися</a>
                            </div>
                        </div>
                        <div class="col-md-6 text-right">
                            <input type="submit" value="Видалити" class="btn btn-danger" />
                        </div>
                    </div>

                </form>
            }
            else
            {
                await Html.RenderPartialAsync("_Errors", TempData["ErrorsList"]);
            }
        </div>
    </div>
</section>